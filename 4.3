fun main() = println(
    readlnOrNull()
        ?.takeIf { it.isNotEmpty() }                // строка не должна быть пустой
        ?.split(" ")                                // разделяем слова (по условию — один пробел)
        ?.let { words ->
            words.flatMap { it.toSet() }            // собираем все уникальные символы из каждого слова. flatMap — объединяет множества всех слов в один список, it.toSet() — превращаем слово в множество символов (дубликаты исчезают)
                .groupingBy { it }                  // группируем по самому символу
                .eachCount()                        // считаем, в скольких словах встречается каждый символ
                .filterValues { it == 1 }           // оставляем только те, что есть ровно в одном слове
                .keys                               // берём сами символы
                .joinToString("")                   // соединяем в строку
                .ifEmpty { "Нет символов" }         // если пусто — выводим текст
        }
        ?: "Нет символов"                           // если вход некорректный
)
