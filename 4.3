//В строке указано несколько слов, разделённых пробелами (по одному пробелу между
//словами). Какие символы отсутствуют ровно в одном слове?

fun main() = println(
    readlnOrNull()
        ?.takeIf { it.isNotEmpty() }
        ?.split(" ")
        ?.let { words ->
            words.flatMap { it.toSet() }
                .groupingBy { it }
                .eachCount()
                .filterValues { it == 1 }
                .keys
                .joinToString("")
                .ifEmpty { "Нет символов" }
        }
        ?: "Нет символов"
)
