fun main() = println(
    readlnOrNull()?.toIntOrNull()?.takeIf { it != 0 }?.let { input ->
        generateSequence(1) { it + 1 }
            .map { n -> n to (if (n <= 1) 1 else (if (n % 2 == 0) (2..n step 2) else (1..n step 2)).reduce { a, b -> a * b }) }
            .firstOrNull { it.second == input }
            ?.first?.toString()
    } ?: "Некорректный ввод или нет решения"
)
