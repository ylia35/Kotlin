// По двойному факториалу найдите исходное число

fun main() = println(
    readlnOrNull()?.toIntOrNull()?.takeIf { it > 0 }?.let { input ->
        (1..input).firstOrNull { digit ->
            (if (digit % 2 == 0) (2..digit step 2) else (1..digit step 2))
                .fold(1) { acc, i -> acc * i } == input
        }?.toString()
            ?: "Число $input не является двойным факториалом"
    } ?: "Некорректный ввод"
)
