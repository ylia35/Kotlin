fun main() = println(
    readlnOrNull()?.toIntOrNull()?.takeIf { it != 0 }                            // не принимать 0
        ?.let { input ->                                                          // если ввели корректное ненулевое число
            generateSequence(1) { it + 1 }                                      // проверяем n = 1,2,3,...
                .map { n -> n to (if (n <= 1) 1 else (1..n step 2).reduce { a, b -> a * b }) } // считаем n!!
                .firstOrNull { it.second == input }                              // ищем n, у которого n!! == input
                ?.first?.toString()                                               // если нашли — вернуть n
        }
        ?: "Некорректный ввод или нет решения"                                    // если ввод не число, либо 0, либо решения нет
)
