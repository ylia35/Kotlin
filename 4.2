// Найдите первый символ в последнем максимально длинном слове с чётным числом
//символов в строке (в строке указываются только слова, разделённые одним или несколь
//кими пробелами).
fun main() = println(
    readlnOrNull()
        ?.takeIf { it.isNotEmpty() }
        ?.split(" ")
        ?.filter { it.length % 2 == 0 }
        ?.let { words ->
            val maxLen = words.maxOfOrNull { it.length }
            words.lastOrNull { it.length == maxLen }?.firstOrNull()
        }
        ?: "Ввод неправильный или нет слов"
)
