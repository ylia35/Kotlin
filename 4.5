fun main() = println(
    List(readln().toInt()) { readln().split(" ") }
        .map { student ->
            val marks = student.drop(2).map { it.toInt() }
            listOf((marks.maxOrNull()!! - marks.minOrNull()!!).toString()) + student
        }
        .sortedWith(compareBy({ -it[0].toInt() }, { it[1] }))
        .take(3)
        .joinToString("\n") { it.drop(1).joinToString(" ") }
)
